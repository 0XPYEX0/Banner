{
  "schemaVersion": 1,
  "id": "banner",
  "version": "${version}",

  "name": "Banner Mod",
  "description": "The Bukkit/Spigot/Paper API implementation for Fabric!",
  "authors": [
    "Mohist Dev Team"
  ],
  "contact": {
    "homepage": "https://github.com/MohistMC/Banner",
    "sources": "https://github.com/MohistMC/Banner"
  },

  "license": "LGPL-v3.0",
  "icon": "assets/banner/icon.png",

  "accessWidener": "banner.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.mohistmc.banner.BannerMod"
    ]
  },
  "mixins": [
    "banner.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric-api": "*",
    "minecraft": "~1.19.4",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/class_1277": ["com/mohistmc/banner/injection/world/InjectionSimpleContainer"],
      "net/minecraft/class_1282": ["com/mohistmc/banner/injection/world/damagesource/InjectionDamageSource"]
    }
